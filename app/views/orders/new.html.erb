<h1>Create New Order</h1>
<%= form_for :order, url: orders_path do |f| %>
  <p>
    <%= f.label :product_id %><br>
    <%= f.number_field :product_id %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </p>
 
  <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', orders_path %>