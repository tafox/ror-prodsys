<h1>Updating Order</h1>
 
<%= form_for :order, url: order_path(@order), method: :patch do |f| %>
 
   <p>
    <%= f.label :status %><br>
    <%= f.number_field :status %>
  </p>
 
  <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', orders_path %>
